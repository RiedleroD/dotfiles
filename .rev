#!/usr/bin/sh
#
# Riedler Environment Variables
#

#ignore duplicate entries in command history
export HISTCONTROL=ignoreboth:erasedups
#the only correct tab size
tabs 4
# to tell SDL where ma good stuff is
export SDL_SOUNDFONTS="/home/riedler/lmms/samples/soundfonts/HQ Orchestral Soundfont Collection v3.0.sf2"
#SDL2 now supports pipewire
export SDL_AUDIODRIVER=pipewire
# fuck vim
export VISUAL="kate -b" #this is especially funny in non-graphical environments
export EDITOR=nano
#toolkit styling
export QT_QPA_PLATFORMTHEME=qt5ct
#gtk3 needs to know where the configs lie
export XDG_CONFIG_HOME=/home/riedler/.config
#gtk4 is a little bitch
export GTK_THEME="Arc-Dark"
#jawa awt needs this
export _JAVA_AWT_WM_NONREPARENTING=1
#java >8 needs this
export AWT_TOOLKIT=MToolkit
#set java home to java version selected by archlinux-java
export JAVA_HOME=/usr/lib/jvm/default
#java options
export JDK_JAVA_OPTIONS="-Dawt.useSystemAAFontSettings=on -Dswing.aatext=true"
